async function fetchOpenPRs() {
    log('Fetching open PRs...');
    const prs = await githubRequest('GET', `/repos/${OWNER}/${REPO}/pulls?state=open`);
    if (!Array.isArray(prs)) return [];

    const candidates = [];
    for (const pr of prs) {
        // Detailed check for mergeable state
        // Detailed check to get mergeable_state
        const detailed = await githubRequest('GET', `/repos/${OWNER}/${REPO}/pulls/${pr.number}`);
        if (detailed.mergeable_state === 'dirty' || detailed.mergeable_state === 'unknown') {
            // 'unknown' usually means GitHub hasn't computed it yet, we might want to check/wait,
            // but checking locally is safer.
            candidates.push(detailed);
        }
    }
    return candidates;
}

async function processPR(pr, reportObj) {
    if (pr.head.repo.full_name !== `${OWNER}/${REPO}`) {
        log(`Skipping fork PR #${pr.number} from ${pr.head.repo.full_name}`, 'WARN');
        return;
    }

    const branch = pr.head.ref;
    log(`Processing PR #${pr.number} (${branch})...`, 'INFO');

    try {
        // Ensure clean slate
        run('git reset --hard HEAD');
        run('git clean -fd');

        run(`git fetch origin ${branch}`);
        run(`git checkout ${branch}`);

        // Rebase attempt
        // Try rebase first
        let rebaseFailed = false;
        // Step 2: Rebase/Merge
        try {
            run(`git fetch origin main`);
            run(`git rebase origin/main`);
        } catch (e) {
            log('Rebase failed, attempting to resolve...', 'WARN');
            rebaseFailed = true;
            // We are now in a rebase state with conflicts
        }

        // If rebase failed, we are in detached HEAD or mid-rebase state
        // The instructions say: "If rebase fails due to conflicts, proceed to fix them; otherwise, skip to step 5."
        // "Resolve Mechanical Conflicts"

        // If rebase failed, we can try to fix conflicts in the rebase process.
        // However, scripting git rebase --continue is tricky because it might stop multiple times.
        // Easier approach: abort rebase, merge main, and fix conflicts there.
        if (rebaseFailed) {
            log('Rebase failed due to conflicts. Attempting resolution...', 'WARN');
            run(`git rebase --abort`, { ignoreError: true });

            // Fallback to merge to expose conflict markers for resolution
            try {
                // Merge main to expose conflicts in a standard way
                // Merge to generate conflict markers for Sentinel to parse
                run(`git merge origin/main`);
            } catch (mergeError) {
                // Merge failed, conflicts exist. This is expected.
                // Merge failed, conflicts exist in working tree
                log('Merge conflict detected.', 'INFO');
            }
        }

        // Step 3: Resolve Mechanical Conflicts
        const fixedFiles = resolveMechanicalConflicts();

        // Check if any conflicts remain
        // Verify if any conflicts remain
        const remainingConflicts = run('git diff --name-only --diff-filter=U', { ignoreError: true });
        if (remainingConflicts) {
             throw new Error(`Unresolved conflicts in: ${remainingConflicts.replace(/\n/g, ', ')}`);
        }

        if (fixedFiles.length > 0) {
             // Commit changes
             // "Commit Each Fix (if reasonable) or batch them into a single..."
             // We batch.
             run(`git commit -m "Sentinel: resolve merge conflicts and pin actions [skip ci]"`, { ignoreError: true });
        } else {
             log('No mechanical fixes applied.', 'INFO');
             // If we merged and there were no conflicts or we just rebased successfully without changes needed?
             // If rebase was successful, fixedFiles is empty.
            run(`git add .`); // Ensure generated files are added
            run(`git commit -m "Sentinel: resolve merge conflicts and pin actions"`);
        }

        // Step 4: Verify Build & Lint
        try {
            log('Verifying build...', 'INFO');
            run('pnpm lint');
            run('pnpm build');
        } catch (e) {
            log('Verification failed. Reverting changes...', 'ERROR');
            // Revert changes
            run(`git reset --hard origin/${branch}`);

            await githubRequest('POST', `/repos/${OWNER}/${REPO}/issues/${pr.number}/labels`, { labels: ['needs-codex'] });
            await githubRequest('POST', `/repos/${OWNER}/${REPO}/issues/${pr.number}/comments`, {
                body: `üõ°Ô∏è **Sentinel Report**\n\nAutomated resolution failed verification. Handing off to Codex.\n\nError: ${e.message}`
            });
            reportObj.failures.push({ pr: pr.number, reason: 'Verification failed' });
            // Revert changes to not push broken code?
            // Instructions say: "If these fail, revert the automated changes and label the PR as needing manual attention."
            run(`git reset --hard origin/${branch}`);
            return;
        }

        // Step 5: Push
        log('Pushing changes...', 'ACTION');
        run(`git push --force-with-lease origin ${branch}`);

        // Step 6: Document
        await githubRequest('POST', `/repos/${OWNER}/${REPO}/issues/${pr.number}/comments`, {
            body: `üõ°Ô∏è **Sentinel Report**\n\nResolved merge conflicts and applied hygiene fixes.\n\n**Files touched:**\n${fixedFiles.map(f => `- ${f}`).join('\n') || 'None'}`
        });
        reportObj.resolved.push({ pr: pr.number, files: fixedFiles });

    } catch (e) {
        log(`Failed to process ${branch}: ${e.message}`, 'ERROR');
        // If critical failure, ensure we don't leave mess?
        // We are in a script, next iteration might reset.
        await githubRequest('POST', `/repos/${OWNER}/${REPO}/issues/${pr.number}/labels`, { labels: ['needs-codex'] });
        await githubRequest('POST', `/repos/${OWNER}/${REPO}/issues/${pr.number}/comments`, {
            body: `üõ°Ô∏è **Sentinel Report**\n\nFailed to process conflicts. Handing off to Codex.\n\nError: ${e.message}`
        });
        reportObj.failures.push({ pr: pr.number, reason: e.message });
        // Clean up
        run(`git rebase --abort`, { ignoreError: true });
        run(`git merge --abort`, { ignoreError: true });
    }
}

async function runSweep() {
    const report = loadReport();
    // Clean old report data if new run?
    // Instructions: "reuses the existing sentinel report file to avoid duplication."
    // Probably means invalidation or appending. But JSON structure has timestamp.
    // Let's update timestamp and keep old logs if we want history, or just use file presence?
    // "Update them if they exist instead of generating duplicates." - referring to FILES (workflows).
    // "Ensure the script checks for and reuses the existing sentinel report file to avoid duplication."
    // This probably refers to not creating a new report file name (like report-1.json), but overwriting or updating `report.json`.
    // My implementation `writeReport` overwrites.
    // But `loadReport` allows us to potentially append or read previous state.
    // For now, I'll update the timestamp.
    report.timestamp = new Date().toISOString();

    const dirtyPRs = await fetchOpenPRs();
    log(`Found ${dirtyPRs.length} candidate PRs.`);

    for (const pr of dirtyPRs) {
        await processPR(pr, report);
    }
    writeReport(report);
}

async function runPRMode() {
    const report = loadReport();
    report.timestamp = new Date().toISOString();

    const branch = process.env.GITHUB_HEAD_REF || run('git rev-parse --abbrev-ref HEAD');

    // In PR mode, we need the PR number.
    // If run from workflow, GITHUB_EVENT_PATH has it.
    let prNumber;
    if (process.env.GITHUB_EVENT_PATH) {
        try {
            const event = require(process.env.GITHUB_EVENT_PATH);
            prNumber = event.pull_request ? event.pull_request.number : null;
        } catch(e) {}
    }

    if (prNumber) {
        const pr = { number: prNumber, head: { ref: branch, repo: { full_name: `${OWNER}/${REPO}` } } };
        // We need 'mergeable_state' check?
        // In PR mode, we just want to run sentinel on *this* PR.
        // But the logic above relies on checking mergeable_state to confirm it's dirty?
        // If triggered by sentinel-pr.yml, it runs on 'opened', 'synchronize'.
        // We should just run processPR.
        await processPR(pr, report);
    } else {
        log("No PR number found (not running in PR context?), skipping PR logic.", 'WARN');
    }
    writeReport(report);
}

