---
const { href, variant = 'primary', disabled = false, loading = false, type = 'button', class: className, ...attrs } = Astro.props;

const Tag = href ? 'a' : 'button';

// Base classes
let buttonClass = 'px-6 py-3 font-semibold rounded-lg text-sm transition inline-flex items-center justify-center gap-2 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-[var(--gs-brand-blue)] focus-visible:ring-offset-2 focus-visible:ring-offset-[var(--gs-bg)]';

// Variant classes
if (variant === 'primary') {
    buttonClass += ' gs-button-primary';
} else if (variant === 'secondary') {
    buttonClass += ' border border-[var(--gs-brand-blue)] text-[var(--gs-text-primary)] hover:bg-[var(--gs-brand-blue)] hover:text-white';
}

// State classes (disabled/loading)
if (disabled || loading) {
    buttonClass += ' opacity-50 cursor-not-allowed pointer-events-none';
}
---

<Tag
    href={!disabled ? href : undefined}
    type={!href ? type : undefined}
    class={`${buttonClass} ${className || ''}`}
    disabled={disabled || loading}
    aria-disabled={disabled || loading}
    {...attrs}
>
    {loading && (
        <svg class="animate-spin h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
    )}
    <slot />
</Tag>
