---
const { kind = 'primary', size = 'md', href } = Astro.props;
const Tag = href ? 'a' : 'button';
---

<Tag class={`gs-btn ${kind} ${size}`} href={href}>
  <slot />
</Tag>

<style>
  .gs-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.5rem 1.4rem;
    border-radius: 10px;
    border: none;
    cursor: pointer;
    font-size: 0.9rem;
    transition: 120ms ease;
  }
  .primary {
    background: linear-gradient(90deg,#22c55e,#22d3ee);
    color: #020617;
  }
  .secondary {
    background: rgba(255,255,255,0.05);
    border: 1px solid rgba(148,163,184,0.4);
    color: #e2e8f0;
  }
</style>
