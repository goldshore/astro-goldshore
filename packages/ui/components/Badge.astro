---
interface Props {
  variant?: 'default' | 'success' | 'warning' | 'error' | 'neutral';
}
const { variant = 'default' } = Astro.props;
---
<span class:list={["gs-badge", `variant-${variant}`]}>
  <slot />
</span>
<style>
  .gs-badge {
    display: inline-block;
    padding: 0.2rem 0.6rem;
    border-radius: var(--gs-radius-pill);
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    line-height: 1.2;
  }
  .variant-default { background: rgba(79, 180, 255, 0.15); color: var(--gs-blue); }
  .variant-neutral { background: rgba(255,255,255,0.1); color: var(--gs-text-muted); }
  .variant-success { background: rgba(0, 255, 128, 0.15); color: #00ff80; }
  .variant-warning { background: var(--gs-gold-soft); color: var(--gs-gold); }
  .variant-error   { background: rgba(255, 80, 80, 0.15); color: #ff5050; }
</style>
