---
interface Props {
  items: string[];
  active?: string;
}
const { items, active } = Astro.props;
---
<div class="gs-tabs">
  <div class="gs-tab-list">
    {items.map(item => (
      <button class:list={["gs-tab", { active: item === active }]}>
        {item}
      </button>
    ))}
  </div>
  <div class="gs-tab-content">
    <slot />
  </div>
</div>
<style>
  .gs-tabs { margin: 1.5rem 0; }
  .gs-tab-list {
    display: flex;
    gap: 2rem;
    border-bottom: 1px solid rgba(255,255,255,0.1);
    margin-bottom: 1.5rem;
  }
  .gs-tab {
    background: none;
    border: none;
    color: var(--gs-text-muted);
    padding: 0.8rem 0;
    cursor: pointer;
    font-size: 0.95rem;
    font-weight: 500;
    border-bottom: 2px solid transparent;
    transition: all 0.2s;
  }
  .gs-tab.active {
    color: var(--gs-gold);
    border-bottom-color: var(--gs-gold);
  }
  .gs-tab:hover:not(.active) {
    color: var(--gs-text);
  }
</style>
