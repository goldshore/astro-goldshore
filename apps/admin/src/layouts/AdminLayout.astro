---
import '@goldshore/theme/tokens.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Goldshore Admin Dashboard" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} | Goldshore Admin</title>
		<style is:global>
			body {
				background-color: var(--color-background);
				color: var(--color-text-primary);
				font-family: var(--font-family-base);
				margin: 0;
				display: flex;
				height: 100vh;
				overflow: hidden;
			}

			/* Sidebar */
			aside {
				width: 250px;
				background-color: var(--color-matte-grey);
				border-right: 1px solid var(--color-silver);
				display: flex;
				flex-direction: column;
				padding: var(--space-4);
			}

			.brand {
				display: flex;
				align-items: center;
				margin-bottom: var(--space-8);
			}

			.brand img {
				height: 32px;
				margin-right: var(--space-2);
			}

			.brand span {
				font-weight: bold;
				color: var(--color-text-primary);
				text-transform: uppercase;
				letter-spacing: 0.05em;
			}

			nav ul {
				list-style: none;
				padding: 0;
			}

			nav li {
				margin-bottom: var(--space-2);
			}

			nav a {
				display: block;
				padding: var(--space-2) var(--space-4);
				color: var(--color-text-secondary);
				text-decoration: none;
				border-radius: var(--border-radius-sm);
				transition: all 0.2s;
			}

			nav a:hover, nav a.active {
				background-color: var(--color-utility-orange);
				color: var(--color-text-primary);
			}

			/* Main Content */
			main {
				flex: 1;
				overflow-y: auto;
				padding: var(--space-8);
				background-color: var(--color-background); /* Alcantara/Dark */
			}

			h1 {
				font-size: 2rem;
				color: var(--color-text-primary);
				margin-bottom: var(--space-8);
				border-bottom: 2px solid var(--color-utility-orange);
				display: inline-block;
				padding-bottom: var(--space-2);
			}

			.dashboard-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
				gap: var(--space-4);
			}

			.card {
				background-color: var(--color-matte-grey);
				padding: var(--space-4);
				border: 1px solid var(--color-silver);
				border-radius: var(--border-radius-md);
				box-shadow: 0 4px 6px rgba(0,0,0,0.3);
			}

			.card-header {
				font-size: 1.1rem;
				color: var(--color-neon-yellow);
				margin-bottom: var(--space-4);
				text-transform: uppercase;
			}

			.stat-value {
				font-size: 2.5rem;
				font-weight: bold;
				color: var(--color-text-primary);
			}

			.stat-label {
				color: var(--color-text-secondary);
				font-size: 0.9rem;
			}
		</style>
	</head>
	<body>
		<aside>
			<div class="brand">
				<img src="/logo.png" alt="Goldshore" />
				<span>Goldshore</span>
			</div>
			<nav>
				<ul>
					<li><a href="/" class="active">Dashboard</a></li>
					<li><a href="/analytics">Analytics</a></li>
					<li><a href="/settings">Settings</a></li>
				</ul>
			</nav>
		</aside>
		<main>
			<slot />
		</main>
	</body>
</html>
