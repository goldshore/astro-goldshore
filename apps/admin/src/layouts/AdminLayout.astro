---
import '@goldshore/theme/tokens';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Goldshore Admin Dashboard" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/assets/logo.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} | Goldshore Admin</title>

		<!-- Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&family=JetBrains+Mono:wght@400;700&display=swap" rel="stylesheet">

		<style is:global>
			body {
				background-color: var(--color-background);
				color: var(--color-text-primary);
				font-family: var(--font-family-base);
				margin: 0;
				display: flex;
				height: 100vh;
				overflow: hidden;
			}

			/* Sidebar */
			aside {
				width: 260px;
				background-color: var(--color-matte-grey);
				border-right: 1px solid var(--color-border);
				display: flex;
				flex-direction: column;
				padding: var(--space-6) var(--space-4);
			}

			.brand {
				display: flex;
				align-items: center;
				margin-bottom: var(--space-8);
				padding: 0 var(--space-2);
			}

			.brand img {
				height: 32px;
				margin-right: var(--space-4);
			}

			.brand-text {
				display: flex;
				flex-direction: column;
			}

			.brand-name {
				font-family: var(--font-family-mono);
				font-weight: 700;
				font-size: var(--font-size-sm);
				color: var(--color-text-primary);
				text-transform: uppercase;
				letter-spacing: 0.1em;
			}

			.brand-sub {
				font-size: 0.6rem;
				color: var(--color-utility-orange);
				text-transform: uppercase;
				letter-spacing: 0.2em;
			}

			nav {
				flex: 1;
			}

			nav ul {
				list-style: none;
				padding: 0;
				margin: 0;
			}

			nav li {
				margin-bottom: 2px;
			}

			nav a {
				display: flex;
				align-items: center;
				padding: var(--space-3) var(--space-4);
				color: var(--color-text-secondary);
				text-decoration: none;
				border-radius: var(--border-radius-sm);
				transition: all 0.2s;
				font-size: var(--font-size-sm);
				font-weight: 500;
				border-left: 2px solid transparent;
			}

			nav a:hover {
				color: var(--color-text-primary);
				background-color: rgba(255, 255, 255, 0.05);
			}

			nav a.active {
				background-color: rgba(255, 95, 31, 0.1); /* Low opacity orange */
				color: var(--color-utility-orange);
				border-left-color: var(--color-utility-orange);
			}

			.user-profile {
				margin-top: auto;
				padding: var(--space-4);
				background-color: rgba(0,0,0,0.2);
				border-radius: var(--border-radius-md);
				display: flex;
				align-items: center;
				gap: var(--space-3);
			}

			.user-avatar {
				width: 32px;
				height: 32px;
				border-radius: 50%;
				background-color: var(--color-silver);
				display: flex;
				align-items: center;
				justify-content: center;
				color: var(--color-matte-grey);
				font-weight: bold;
				font-size: var(--font-size-xs);
			}

			.user-info {
				display: flex;
				flex-direction: column;
			}

			.user-name {
				font-size: var(--font-size-sm);
				font-weight: 600;
			}

			.user-role {
				font-size: 0.7rem;
				color: var(--color-text-secondary);
				text-transform: uppercase;
			}

			/* Main Content */
			main {
				flex: 1;
				overflow-y: auto;
				padding: var(--space-8);
				background-color: var(--color-background);
			}

			header.main-header {
				display: flex;
				justify-content: space-between;
				align-items: center;
				margin-bottom: var(--space-8);
				padding-bottom: var(--space-4);
				border-bottom: 1px solid var(--color-border);
			}

			h1 {
				font-family: var(--font-family-mono);
				font-size: var(--font-size-xl);
				color: var(--color-text-primary);
				margin: 0;
				text-transform: uppercase;
				letter-spacing: -0.02em;
			}

			.breadcrumbs {
				color: var(--color-text-secondary);
				font-size: var(--font-size-sm);
				font-family: var(--font-family-mono);
			}

			/* Utils */
			.mono { font-family: var(--font-family-mono); }
			.text-orange { color: var(--color-utility-orange); }
			.text-green { color: var(--color-sports-car-green); }
			.text-yellow { color: var(--color-neon-yellow); }
			.text-silver { color: var(--color-silver); }

		</style>
	</head>
	<body>
		<aside>
			<div class="brand">
				<img src="/assets/logo.png" alt="Goldshore" />
				<div class="brand-text">
					<span class="brand-name">Goldshore</span>
					<span class="brand-sub">Admin Console</span>
				</div>
			</div>
			<nav>
				<ul>
					<li><a href="/" class="active">Overview</a></li>
					<li><a href="/analytics">Analytics</a></li>
					<li><a href="/capital">Capital Control</a></li>
					<li><a href="/users">User Management</a></li>
					<li><a href="/audit">Audit Logs</a></li>
				</ul>
				<div style="margin-top: var(--space-8); padding-left: var(--space-4); font-size: 0.7rem; color: var(--color-text-muted); text-transform: uppercase;">Settings</div>
				<ul>
					<li><a href="/config">Configuration</a></li>
					<li><a href="/api-keys">API Keys</a></li>
				</ul>
			</nav>

			<div class="user-profile">
				<div class="user-avatar">AD</div>
				<div class="user-info">
					<span class="user-name">Admin User</span>
					<span class="user-role">Super Admin</span>
				</div>
			</div>
		</aside>
		<main>
			<header class="main-header">
				<h1>{title}</h1>
				<div class="breadcrumbs">System / Overview</div>
			</header>
			<slot />
		</main>
	</body>
</html>
import Sidebar from '../components/Sidebar.astro';
import Topbar from '../components/Topbar.astro';

const { title = 'GoldShore Admin' } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
  </head>
  <body class="gs-admin-body">
    <div class="gs-admin-shell">
      <Sidebar />

      <div class="gs-admin-main">
        <Topbar title={title} />
        <main class="gs-admin-content">
          <slot />
        </main>
      </div>
    </div>
  </body>
</html>

<style>
  .gs-admin-body {
    margin: 0;
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'SF Pro Text',
      sans-serif;
    background: #050814;
    color: #f9fafb;
  }

  .gs-admin-shell {
    display: grid;
    grid-template-columns: 260px minmax(0, 1fr);
    min-height: 100vh;
  }

  .gs-admin-main {
    display: flex;
    flex-direction: column;
    border-left: 1px solid rgba(148, 163, 184, 0.2);
    background: radial-gradient(circle at top left, #0f172a, #020617);
  }

  .gs-admin-content {
    padding: 1.5rem 2rem 2rem;
  }

  @media (max-width: 900px) {
    .gs-admin-shell {
      grid-template-columns: 72px minmax(0, 1fr);
    }
  }
</style>
