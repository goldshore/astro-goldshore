---
import { ThemeManager } from '@goldshore/theme/manager';
import Sidebar from '../components/Sidebar.astro';
import Topbar from '../components/Topbar.astro';

interface Props {
  title?: string;
}

import '@goldshore/theme';
import logo from '@goldshore/theme/assets/logo.svg';
import Sidebar from '../components/Sidebar.astro';
import Topbar from '../components/Topbar.astro';

const { title = 'GoldShore Admin' } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <script>
      import { ThemeManager } from '@goldshore/theme/manager';
      ThemeManager.init();
    </script>
  </head>
  <body>
    <a href="#admin-content" class="skip-link">Skip to content</a>
    <div class="gs-admin-grid">
      <Sidebar logo={logo} />
      <div class="gs-admin-main">
        <Topbar title={title} />
        <main id="admin-content" class="gs-admin-content">
          <slot />
        </main>
      </div>
    </div>
    <script type="module">
      import { initTheme } from '@goldshore/theme/manager';
      initTheme();
    </script>
  </body>
</html>
