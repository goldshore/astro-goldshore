---
import '@goldshore/theme/tokens.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Goldshore Admin Dashboard" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/assets/logo.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} | Goldshore Admin</title>

		<!-- Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&family=JetBrains+Mono:wght@400;700&display=swap" rel="stylesheet">

		<style is:global>
			body {
				background-color: var(--color-background);
				color: var(--color-text-primary);
				font-family: var(--font-family-base);
				margin: 0;
				display: flex;
				height: 100vh;
				overflow: hidden;
			}

			/* Sidebar */
			aside {
				width: 260px;
				background-color: var(--color-matte-grey);
				border-right: 1px solid var(--color-border);
				display: flex;
				flex-direction: column;
				padding: var(--space-6) var(--space-4);
			}

			.brand {
				display: flex;
				align-items: center;
				margin-bottom: var(--space-8);
				padding: 0 var(--space-2);
			}

			.brand img {
				height: 32px;
				margin-right: var(--space-4);
			}

			.brand-text {
				display: flex;
				flex-direction: column;
			}

			.brand-name {
				font-family: var(--font-family-mono);
				font-weight: 700;
				font-size: var(--font-size-sm);
				color: var(--color-text-primary);
				text-transform: uppercase;
				letter-spacing: 0.1em;
			}

			.brand-sub {
				font-size: 0.6rem;
				color: var(--color-utility-orange);
				text-transform: uppercase;
				letter-spacing: 0.2em;
			}

			nav {
				flex: 1;
			}

			nav ul {
				list-style: none;
				padding: 0;
				margin: 0;
			}

			nav li {
				margin-bottom: 2px;
			}

			nav a {
				display: flex;
				align-items: center;
				padding: var(--space-3) var(--space-4);
				color: var(--color-text-secondary);
				text-decoration: none;
				border-radius: var(--border-radius-sm);
				transition: all 0.2s;
				font-size: var(--font-size-sm);
				font-weight: 500;
				border-left: 2px solid transparent;
			}

			nav a:hover {
				color: var(--color-text-primary);
				background-color: rgba(255, 255, 255, 0.05);
			}

			nav a.active {
				background-color: rgba(255, 95, 31, 0.1); /* Low opacity orange */
				color: var(--color-utility-orange);
				border-left-color: var(--color-utility-orange);
			}

			.user-profile {
				margin-top: auto;
				padding: var(--space-4);
				background-color: rgba(0,0,0,0.2);
				border-radius: var(--border-radius-md);
				display: flex;
				align-items: center;
				gap: var(--space-3);
			}

			.user-avatar {
				width: 32px;
				height: 32px;
				border-radius: 50%;
				background-color: var(--color-silver);
				display: flex;
				align-items: center;
				justify-content: center;
				color: var(--color-matte-grey);
				font-weight: bold;
