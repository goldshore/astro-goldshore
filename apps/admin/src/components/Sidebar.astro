---
const links = [
  { href: '/admin', label: 'Overview' },
  { href: '/admin/dashboard', label: 'Dashboard' },
  { href: '/admin/systems', label: 'Systems' },
  { href: '/admin/users', label: 'Users' },
  { href: '/admin/logs', label: 'Logs' },
  { href: '/admin/settings', label: 'Settings' }
];

const { logo } = Astro.props;
---
<aside class="gs-admin-sidebar" aria-label="Admin navigation">
  <a class="gs-logo" href="/admin">
    {logo ? <img src={logo} alt="GoldShore logo" width="32" height="32" loading="eager" fetchpriority="high" /> : <span aria-hidden="true">â—†</span>}
    <span>GoldShore</span>
  </a>
  <nav class="gs-sidebar-links">
    {links.map((link) => (
      <a
        class="gs-nav-block"
        href={link.href}
        aria-current={Astro.url.pathname === link.href ? 'page' : undefined}
      >
        {link.label}
      </a>
    ))}
  </nav>
</aside>
