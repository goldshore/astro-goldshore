---
import AdminSidebar from "../ui/AdminSidebar.astro";
import "@goldshore/theme/index.css";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>GoldShore Admin</title>
  </head>
  <body>
    <div class="admin-shell">
      <AdminSidebar />
      <main>
        <slot />
      </main>
    </div>
  </body>
</html>

<style is:global>
  body {
    background: var(--gs-bg);
    color: var(--gs-text);
    font-family: system-ui, sans-serif;
    margin: 0;
    overflow: hidden; /* Main scrolls */
  }
  .admin-shell {
    display: flex;
    height: 100vh;
  }
  main {
    flex: 1;
    padding: 2rem;
    overflow-y: auto;
    background: var(--gs-bg);
  }
  h1 { font-size: 1.8rem; font-weight: 600; margin-bottom: 2rem; }
  h2 { font-size: 1.4rem; font-weight: 500; margin-bottom: 1.5rem; }
</style>
