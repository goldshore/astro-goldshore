---
const { label, value, help } = Astro.props;
---

<section class="gs-stat-card">
  <div class="gs-stat-label">{label}</div>
  <div class="gs-stat-value">{value}</div>
  {help && <div class="gs-stat-help">{help}</div>}
</section>

<style>
  .gs-stat-card {
    border-radius: 1rem;
    padding: 1rem 1.1rem;
    background: radial-gradient(circle at top left, #020617, #020617);
    border: 1px solid rgba(148, 163, 184, 0.25);
    display: flex;
    flex-direction: column;
    gap: 0.3rem;
  }

  .gs-stat-label {
    font-size: 0.8rem;
    color: #9ca3af;
  }

  .gs-stat-value {
    font-size: 1.3rem;
    font-weight: 600;
  }

  .gs-stat-help {
    font-size: 0.75rem;
    color: #6b7280;
  }
</style>
