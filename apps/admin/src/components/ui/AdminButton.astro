---
const { href } = Astro.props;
---

{href ? (
  <a href={href} class="admin-btn"><slot /></a>
) : (
  <button type="button" class="admin-btn"><slot /></button>
)}

<style>
  .admin-btn {
    display: inline-flex;
    align-items: center;
    padding: 0.4rem 0.8rem;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 6px;
    color: var(--gs-text);
    font-size: 0.85rem;
    cursor: pointer;
    text-decoration: none;
  }
  .admin-btn:hover {
    background: rgba(255, 255, 255, 0.1);
  }
</style>