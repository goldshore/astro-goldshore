---
import AdminLayout from "../../components/Layouts/AdminLayout.astro";
import { Badge } from "@goldshore/ui";
---

<AdminLayout>
  <h1>DNS Records</h1>

  <table class="dns-table">
    <thead>
      <tr>
        <th>Type</th>
        <th>Name</th>
        <th>Content</th>
        <th>Proxy</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>A</td>
        <td>goldshore.ai</td>
        <td>192.0.2.1</td>
        <td><Badge variant="warning">Proxied</Badge></td>
      </tr>
      <tr>
        <td>CNAME</td>
        <td>www.goldshore.ai</td>
        <td>goldshore.ai</td>
        <td><Badge variant="warning">Proxied</Badge></td>
      </tr>
      <tr>
        <td>CNAME</td>
        <td>api.goldshore.ai</td>
        <td>gs-api.goldshore.workers.dev</td>
        <td><Badge variant="warning">Proxied</Badge></td>
      </tr>
      <tr>
        <td>CNAME</td>
        <td>admin.goldshore.ai</td>
        <td>gs-admin.pages.dev</td>
        <td><Badge variant="warning">Proxied</Badge></td>
      </tr>
    </tbody>
  </table>
</AdminLayout>

<style>
  .dns-table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 2rem;
  }
  th, td {
    text-align: left;
    padding: 1rem;
    border-bottom: 1px solid rgba(255,255,255,0.08);
  }
  th {
    color: var(--gs-text-muted);
    font-size: 0.85rem;
    text-transform: uppercase;
  }
</style>
