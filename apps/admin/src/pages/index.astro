---
import AdminLayout from "../components/Layouts/AdminLayout.astro";
import AdminCard from "../components/ui/AdminCard.astro";
---

<AdminLayout>
  <h1>System Dashboard</h1>

  <div style="display:grid; grid-template-columns:repeat(auto-fit, minmax(260px,1fr)); gap:1.5rem;">
    <AdminCard title="Worker Status">
      <span style="color: #00ff80">All healthy</span>
    </AdminCard>
    <AdminCard title="API Latency">
      23 ms
    </AdminCard>
    <AdminCard title="KV Size">
      12.4 MB
    </AdminCard>
    <AdminCard title="Active Agents">
      3
    </AdminCard>
  </div>
</AdminLayout>
