---
import AdminLayout from '../layouts/AdminLayout.astro';
---

<AdminLayout title="Dashboard">
	<h1>System Overview</h1>

	<div class="dashboard-grid">
		<div class="card">
			<div class="card-header">Active Nodes</div>
			<div class="stat-value">142</div>
			<div class="stat-label">Operating normally</div>
		</div>
		<div class="card">
			<div class="card-header">Network Load</div>
			<div class="stat-value" style="color: var(--color-utility-orange);">45%</div>
			<div class="stat-label">Optimal efficiency</div>
		</div>
		<div class="card">
			<div class="card-header">Transactions</div>
			<div class="stat-value">8.4k</div>
			<div class="stat-label">Last 24 hours</div>
		</div>
		<div class="card">
			<div class="card-header">System Status</div>
			<div class="stat-value" style="color: var(--color-sports-car-green);">ONLINE</div>
			<div class="stat-label">All systems nominal</div>
		</div>
	</div>

	<div style="margin-top: var(--space-8);">
		<div class="card">
			<div class="card-header">Activity Log</div>
			<table style="width: 100%; border-collapse: collapse; color: var(--color-text-secondary);">
				<thead>
					<tr style="border-bottom: 1px solid var(--color-silver); text-align: left;">
						<th style="padding: var(--space-2);">Time</th>
						<th style="padding: var(--space-2);">Event</th>
						<th style="padding: var(--space-2);">Status</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td style="padding: var(--space-2);">10:42:05</td>
						<td style="padding: var(--space-2);">Node synchronization</td>
						<td style="padding: var(--space-2); color: var(--color-success);">Completed</td>
					</tr>
					<tr>
						<td style="padding: var(--space-2);">10:40:12</td>
						<td style="padding: var(--space-2);">User login: admin</td>
						<td style="padding: var(--space-2); color: var(--color-success);">Success</td>
					</tr>
					<tr>
						<td style="padding: var(--space-2);">10:35:00</td>
						<td style="padding: var(--space-2);">Backup routine</td>
						<td style="padding: var(--space-2); color: var(--color-highlight);">Pending</td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
</AdminLayout>
