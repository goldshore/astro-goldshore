import AdminLayout from '../../layouts/AdminLayout.astro';
import { Card, GSButton } from '@goldshore/ui';
---

<AdminLayout title="Trading">
  <section class="gs-grid columns-2">
    <Card>
      <div class="section-title"><span>⌁</span><h3>Trade Console</h3></div>
      <p class="gs-helper">Orchestrate live trading signals, risk limits, and account routing.</p>
      <form class="gs-form-row" id="trade-form">
        <div class="gs-input-group">
          <label for="ticker">Ticker</label>
          <input id="ticker" name="ticker" placeholder="TSLA" />
        </div>
        <div class="gs-input-group">
          <label for="side">Side</label>
          <select id="side" name="side">
            <option>BUY</option>
            <option>SELL</option>
          </select>
        </div>
        <div class="gs-input-group">
          <label for="size">Size</label>
          <input id="size" name="size" type="number" min="1" value="1" />
        </div>
        <div class="gs-input-group">
          <label for="type">Type</label>
          <select id="type" name="type">
            <option>MARKET</option>
            <option>LIMIT</option>
          </select>
        </div>
      </form>
      <div class="gs-form-actions">
        <GSButton type="button" class="gs-button--small">Simulate order</GSButton>
        <GSButton type="button" variant="secondary" class="gs-button--small">Wire to API</GSButton>
      </div>
    </Card>

    <Card>
      <div class="section-title"><span>✓</span><h3>Pre-trade checks</h3></div>
      <ul>
        <li>Account balance verified</li>
        <li>Risk budget within limits</li>
        <li>Connectivity healthy</li>
      </ul>
    </Card>
  </section>
</AdminLayout>
