---
import DocsSidebar from '../components/DocsSidebar.astro';
import DocsSearch from '../components/DocsSearch.astro';

const { title, page } = Astro.props;

const breadcrumb = page.slug.split('/');
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
  </head>

  <body class="docs-body">
    <header class="docs-top">
      <a class="brand" href="/">GoldShore</a>
      <DocsSearch />
    </header>

    <div class="docs-shell">
      <DocsSidebar currentSlug={page.slug} />

      <main class="docs-content">
        <nav class="breadcrumbs">
          {breadcrumb.map((b, i) => (
            <a href={'/developer/docs/' + breadcrumb.slice(0,i+1).join('/')}>{b}</a>
          ))}
        </nav>

        <slot />
      </main>
    </div>
  </body>
</html>

<style is:global>
  body {
    font-family: system-ui, -apple-system, sans-serif;
    margin: 0;
    background-color: #f4f4f5;
    color: #18181b;
  }
  a {
    color: #2563eb;
    text-decoration: none;
  }
  a:hover {
    text-decoration: underline;
  }
  .docs-top {
    background: white;
    border-bottom: 1px solid #e4e4e7;
    padding: 1rem 2rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  .brand {
    font-weight: bold;
    font-size: 1.25rem;
    color: black;
    text-decoration: none;
  }
  .docs-shell {
    display: flex;
    max-width: 1280px;
    margin: 0 auto;
    padding: 2rem;
    gap: 2rem;
  }
  .sidebar {
    width: 240px;
    flex-shrink: 0;
    border-right: 1px solid #e4e4e7;
    padding-right: 2rem;
  }
  .docs-content {
    flex: 1;
    min-width: 0; /* prevent overflow */
  }
  .breadcrumbs {
    font-size: 0.875rem;
    color: #71717a;
    margin-bottom: 1.5rem;
  }
  .breadcrumbs a::after {
    content: "/";
    margin: 0 0.5rem;
    color: #d4d4d8;
  }
  .breadcrumbs a:last-child::after {
    content: "";
  }
</style>
