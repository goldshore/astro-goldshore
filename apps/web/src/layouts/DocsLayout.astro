---
import '@goldshore/theme';
import Nav from '../components/Nav.astro';
const { title } = Astro.props;
---
<html>
  <head>
    <title>{title} | Docs</title>
  </head>
  <body>
    <Nav />
    <div class="docs-container">
       <aside class="docs-sidebar">
          <h3>Documentation</h3>
          <ul>
            <li><a href="/developer/docs/intro">Introduction</a></li>
          </ul>
       </aside>
       <main>
         <h1>{title}</h1>
         <slot />
       </main>
    </div>
  </body>
</html>
<style>
  .docs-container { display: flex; min-height: 100vh; }
  .docs-sidebar {
    width: 250px;
    border-right: 1px solid var(--gs-border);
    padding: 2rem;
    background: var(--gs-bg-panel);
  }
  .docs-sidebar ul { list-style: none; padding: 0; }
  .docs-sidebar li { margin-bottom: 0.5rem; }
  main { flex: 1; padding: 4rem; max-width: 800px; }
</style>
