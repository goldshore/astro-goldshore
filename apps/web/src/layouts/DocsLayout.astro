---
import DocsSidebar from '../components/DocsSidebar.astro';
import DocsSearch from '../components/DocsSearch.astro';
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';

const { title = 'GoldShore Docs', page = { slug: '' } } = Astro.props;

const breadcrumb = page.slug ? page.slug.split('/') : [];
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
  </head>

  <body class="docs-body">
    <Nav />

    <div class="docs-shell">
      <DocsSidebar currentSlug={page.slug} />

      <main class="docs-content">
        <nav class="breadcrumbs">
          {breadcrumb.map((b, i) => (
            <a href={'/developer/docs/' + breadcrumb.slice(0,i+1).join('/')}>{b}</a>
          ))}
        </nav>

        <slot />
      </main>
    </div>
    <Footer />
  </body>
</html>

<style is:global>
  body {
    font-family: system-ui, -apple-system, sans-serif;
    margin: 0;
    background-color: #020617;
    color: #f8fafc;
  }
  a {
    color: #3b82f6;
    text-decoration: none;
  }
  a:hover {
    text-decoration: underline;
  }
  .docs-shell {
    display: grid;
    grid-template-columns: 280px 1fr;
    max-width: 1400px;
    margin: 0 auto;
    padding-top: 20px;
  }
  .docs-content {
    padding: 2rem;
    min-width: 0;
  }
  .breadcrumbs {
    font-size: 0.875rem;
    color: #94a3b8;
    margin-bottom: 1.5rem;
  }
  .breadcrumbs a::after {
    content: "/";
    margin: 0 0.5rem;
    color: #475569;
  }
  .breadcrumbs a:last-child::after {
    content: "";
  }
</style>
