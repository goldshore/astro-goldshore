import Section from "../../components/ui/Section.astro";
import CodeBlock from "../../components/ui/CodeBlock.astro";
---

<WebLayout title="Developer Docs">
  <Section max="lg">
    <h1>Developer Documentation</h1>
    <p>Welcome to the GoldShore developer documentation. Here you can find information about our API, SDKs, and integration guides.</p>

    <h2>Base URLs</h2>
    <CodeBlock lang="txt">
API: https://api.goldshore.ai
Gateway: https://gw.goldshore.ai
Admin: https://admin.goldshore.ai
    </CodeBlock>

    <h2>Authentication</h2>
    <p>All requests require GoldShore Access tokens or Cloudflare Access JWTs.</p>
  </Section>
</WebLayout>