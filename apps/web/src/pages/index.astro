---
import MarketingLayout from '../layouts/MarketingLayout.astro';
import { Button } from '@goldshore/ui';
---

<MarketingLayout title="Goldshore | Shaping Waves">
  <section class="hero">
    <div class="container">
      <h1>Shaping <span>Waves</span></h1>
      <p class="tag">System Status: Operational</p>

      <div class="cta">
        <Button href="/developer/docs">Documentation</Button>
        <Button kind="secondary" href="https://github.com/goldshore">GitHub</Button>
      </div>
    </div>
  </section>
</MarketingLayout>

<style>
  .hero {
    padding: 8rem 0;
    text-align: center;
  }
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }
  h1 {
    font-size: 4rem;
    font-weight: 800;
    line-height: 1.1;
    margin-bottom: 1.5rem;
    color: white;
  }
  h1 span {
    background: linear-gradient(90deg, #22c55e, #22d3ee);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
  .tag {
    display: inline-block;
    background: rgba(34, 197, 94, 0.1);
    color: #4ade80;
    padding: 0.5rem 1rem;
    border-radius: 999px;
    font-size: 0.875rem;
    font-weight: 500;
    margin-bottom: 2rem;
  }
  .cta {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-top: 2rem;
  }
</style>
