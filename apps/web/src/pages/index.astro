---
import '@goldshore/theme/tokens.css';

// Placeholder for future component imports
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.ico" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Goldshore | Shaping Waves</title>
		<style>
			body {
				background-color: var(--color-background);
				color: var(--color-text-primary);
				font-family: var(--font-family-base);
				margin: 0;
				padding: 0;
			}

			.container {
				max-width: 1200px;
				margin: 0 auto;
				padding: 0 var(--space-4);
			}

			header {
				padding: var(--space-4) 0;
				border-bottom: 1px solid var(--color-matte-grey);
				display: flex;
				justify-content: space-between;
				align-items: center;
			}

			.logo {
				height: 40px;
			}

			.hero {
				padding: var(--space-16) 0;
				text-align: center;
				background: linear-gradient(180deg, var(--color-background) 0%, var(--color-matte-grey) 100%);
			}

			h1 {
				font-size: 4rem;
				color: var(--color-text-primary);
				margin-bottom: var(--space-4);
				text-transform: uppercase;
				letter-spacing: 0.1em;
			}

			h2 {
				font-size: 2.5rem;
				color: var(--color-accent);
				margin-bottom: var(--space-8);
			}

			.cta-button {
				background-color: var(--color-utility-orange);
				color: var(--color-text-primary);
				padding: var(--space-4) var(--space-8);
				border-radius: var(--border-radius-md);
				text-decoration: none;
				font-weight: bold;
				text-transform: uppercase;
				transition: background-color 0.3s ease;
			}

			.cta-button:hover {
				background-color: var(--color-highlight);
				color: var(--color-background);
			}

			.section {
				padding: var(--space-16) 0;
			}

			.section-dark {
				background-color: var(--color-matte-grey);
			}

			.feature-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
				gap: var(--space-8);
			}

			.feature-card {
				background-color: var(--color-alcantara);
				padding: var(--space-8);
				border-radius: var(--border-radius-md);
				border: 1px solid var(--color-silver);
			}

			footer {
				padding: var(--space-8) 0;
				text-align: center;
				color: var(--color-text-secondary);
				border-top: 1px solid var(--color-matte-grey);
			}
		</style>
	</head>
	<body>
		<header>
			<div class="container">
				<img src="/logo.png" alt="Goldshore Labs" class="logo" />
				<nav>
					<!-- Navigation placeholder -->
				</nav>
			</div>
		</header>

		<main>
			<section class="hero">
				<div class="container">
					<h1>Shaping Waves</h1>
					<p style="font-size: 1.25rem; color: var(--color-text-secondary); max-width: 600px; margin: 0 auto var(--space-8);">
						Redefining the future of capital with precision and speed.
					</p>
					<a href="#" class="cta-button">Explore</a>
				</div>
			</section>

			<section class="section section-dark">
				<div class="container">
					<h2>We Steer Capital</h2>
					<div class="feature-grid">
						<div class="feature-card">
							<h3 style="color: var(--color-neon-yellow)">Speed</h3>
							<p>Military-grade infrastructure for high-frequency operations.</p>
						</div>
						<div class="feature-card">
							<h3 style="color: var(--color-neon-yellow)">Precision</h3>
							<p>Algorithmic strategies modeled on fluid dynamics.</p>
						</div>
						<div class="feature-card">
							<h3 style="color: var(--color-neon-yellow)">Control</h3>
							<p>Real-time analytics and dashboarding.</p>
						</div>
					</div>
				</div>
			</section>
		</main>

		<footer>
			<div class="container">
				<p>&copy; 2024 Goldshore Labs. All rights reserved.</p>
			</div>
		</footer>
	</body>
</html>
