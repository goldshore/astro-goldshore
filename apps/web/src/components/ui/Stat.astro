---
const { label, value, hint } = Astro.props;
---

<div class="gs-stat">
  <div class="gs-stat-value">{value}</div>
  <div class="gs-stat-label">{label}</div>
  {hint && <div class="gs-stat-hint">{hint}</div>}
</div>

<style>
  .gs-stat {
    padding: 1rem 1.2rem;
    border-radius: var(--gs-radius-md);
    border: 1px solid rgba(255, 255, 255, 0.08);
    background: radial-gradient(circle at top, rgba(227, 179, 65, 0.08), transparent 55%),
      rgba(5, 5, 9, 0.9);
  }

  .gs-stat-value {
    font-size: 1.5rem;
    font-weight: 600;
  }

  .gs-stat-label {
    margin-top: 0.25rem;
    font-size: 0.78rem;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--gs-text-soft);
  }

  .gs-stat-hint {
    margin-top: 0.25rem;
    font-size: 0.75rem;
    color: var(--gs-text-muted);
  }
</style>