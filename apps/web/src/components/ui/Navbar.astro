---
import { Button } from "@goldshore/ui";
---
<nav class="navbar">
  <div class="container">
    <a href="/" class="logo">
      <span class="gold">GOLD</span>SHORE
    </a>
    <div class="links">
      <a href="/about">About</a>
      <a href="/contact">Contact</a>
      <a href="/developer/docs">Developers</a>
    </div>
    <div class="actions">
      <Button href="https://admin.goldshore.ai" variant="secondary" style="padding: 0.4rem 0.8rem; font-size: 0.85rem;">Console</Button>
    </div>
  </div>
</nav>
<style>
  .navbar {
    border-bottom: 1px solid rgba(255,255,255,0.08);
    background: rgba(5, 5, 9, 0.8);
    backdrop-filter: blur(12px);
    position: sticky;
    top: 0;
    z-index: 100;
  }
  .container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0.8rem 2rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  .logo {
    font-weight: 800;
    font-size: 1.1rem;
    color: var(--gs-text);
    text-decoration: none;
    letter-spacing: -0.02em;
    text-transform: uppercase;
  }
  .gold {
    color: var(--gs-gold);
  }
  .links {
    display: flex;
    gap: 2rem;
  }
  .links a {
    color: var(--gs-text-soft);
    text-decoration: none;
    font-size: 0.9rem;
    font-weight: 500;
    transition: color 0.2s;
  }
  .links a:hover {
    color: var(--gs-text);
  }
</style>
