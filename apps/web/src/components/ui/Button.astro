---
const {
  href,
  variant = "primary", // "primary" | "ghost" | "subtle"
  size = "md",         // "sm" | "md" | "lg"
} = Astro.props;
---

{href ? (
  <a href={href} class={`gs-btn gs-btn-${variant} gs-btn-${size}`}>
    <slot />
  </a>
) : (
  <button type="button" class={`gs-btn gs-btn-${variant} gs-btn-${size}`}>
    <slot />
  </button>
)}

<style>
  .gs-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.35rem;
    border-radius: var(--gs-radius-pill);
    border: 1px solid transparent;
    font-size: 0.85rem;
    line-height: 1.2;
    padding-inline: 1.1rem;
    padding-block: 0.55rem;
    cursor: pointer;
    transition:
      background var(--gs-speed-normal) var(--gs-ease),
      border-color var(--gs-speed-normal) var(--gs-ease),
      transform var(--gs-speed-fast) var(--gs-ease),
      box-shadow var(--gs-speed-fast) var(--gs-ease);
    white-space: nowrap;
  }

  .gs-btn-primary {
    background: linear-gradient(120deg, var(--gs-gold), var(--gs-blue));
    color: #050509;
    border-color: rgba(255, 255, 255, 0.85);
    box-shadow: 0 16px 35px rgba(0, 0, 0, 0.7);
  }

  .gs-btn-primary:hover {
    transform: translateY(-1px);
    box-shadow: 0 20px 45px rgba(0, 0, 0, 0.9);
  }

  .gs-btn-ghost {
    background: rgba(255, 255, 255, 0.02);
    border-color: rgba(255, 255, 255, 0.08);
    color: var(--gs-text-soft);
  }

  .gs-btn-ghost:hover {
    background: rgba(255, 255, 255, 0.04);
  }

  .gs-btn-subtle {
    background: transparent;
    border-color: transparent;
    color: var(--gs-text-muted);
  }

  .gs-btn-sm {
    padding-block: 0.4rem;
    padding-inline: 0.9rem;
    font-size: 0.78rem;
  }

  .gs-btn-lg {
    padding-block: 0.8rem;
    padding-inline: 1.4rem;
    font-size: 0.95rem;
  }
</style>