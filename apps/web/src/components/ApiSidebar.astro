---
const { openapi } = Astro.props;
const currentPath = Astro.url.pathname;
---
<nav class="api-sidebar" aria-label="API Navigation">
  <div class="sidebar-header">
    <h3 class="title">{openapi.info.title}</h3>
    <span class="version">v{openapi.info.version}</span>
  </div>
  <ul class="endpoint-list">
    {Object.keys(openapi.paths).map(path => {
      const href = `/developer/api${path}`;
      const isActive = currentPath === href || (path === '/' && currentPath === '/developer/api');
      return (
        <li>
          <a
            href={href}
            class:list={['endpoint-link', { active: isActive }]}
            aria-current={isActive ? 'page' : undefined}
          >
            {path}
          </a>
        </li>
      );
    })}
  </ul>
</nav>

<style>
  .api-sidebar {
    width: 280px;
    border-right: 1px solid var(--gs-border);
    padding: var(--gs-space-4);
    background: var(--gs-bg-panel);
    height: 100vh;
    position: sticky;
    top: 0;
    overflow-y: auto;
  }

  .sidebar-header {
    display: flex;
    align-items: baseline;
    justify-content: space-between;
    margin-bottom: var(--gs-space-4);
    padding-bottom: var(--gs-space-2);
    border-bottom: 1px solid var(--gs-border);
  }

  .title {
    margin: 0;
    font-size: 1rem;
    font-weight: 600;
    color: var(--gs-fg);
  }

  .version {
    font-size: 0.75rem;
    color: var(--gs-fg-muted);
    font-family: var(--gs-font-mono);
  }

  .endpoint-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .endpoint-link {
    display: block;
    padding: 0.5rem 0.75rem;
    text-decoration: none;
    color: var(--gs-fg-muted);
    font-family: var(--gs-font-mono);
    font-size: 0.875rem;
    border-radius: var(--gs-radius-sm);
    transition: all 0.2s ease;
  }

  .endpoint-link:hover {
    background: var(--gs-bg-element-hover);
    color: var(--gs-fg);
  }

  .endpoint-link.active {
    background: var(--gs-bg-element-active);
    color: var(--gs-accent);
    font-weight: 500;
  }
</style>
