---
const { openapi } = Astro.props;
const paths = Object.keys(openapi.paths || {});
---

<aside class="api-sidebar">
  <h3>API Reference</h3>
  <div class="paths">
    {paths.map(path => (
      <a href={`/developer/api/${path.replace(/^\//, '')}`}>{path}</a>
    ))}
  </div>
</aside>

<style>
  .api-sidebar {
    width: 250px;
    border-right: 1px solid #e4e4e7;
    padding: 1rem;
    height: 100vh;
    overflow-y: auto;
  }
  .paths {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }
  a {
    color: #2563eb;
    text-decoration: none;
    font-family: monospace;
  }
</style>
