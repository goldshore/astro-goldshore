---
import Navbar from "../ui/Navbar.astro";
import Footer from "../ui/Footer.astro";
import "../../styles/base.css";

const { title = "GoldShore", description = "GoldShore Platform" } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/src/assets/logos/goldshore.svg" />
  </head>
  <body>
    <Navbar />

    <main class="page-container">
      <slot />
    </main>

    <Footer />
  </body>
</html>